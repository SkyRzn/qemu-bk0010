;    -------------------------------
;    ** 2.2. ФОРМИРОВАНИЕ СИМВОЛА **
;    -------------------------------

PFSIM:	ASL	R0		;  ВЫЧИСЛЕНИЕ АДР. ИЗОБР.
	MOV	R0,R1
	ASL	R0
	ASL	R0
	ADD	R0,R1
	ADD	#IZSIM,R1

	MOV	AS,R3		;  ПОДГ. АДР. И СЧЕТЧИКА
	MOV	#11,R2

	TSTB	PRCW		;  ЧБ/ЦВ
	BNE	PFCWS

;	ФОРМИРОВАНИЕ ЧЕРНО-БЕЛОГО СИМВОЛА
;	---------------------------------

	CLR	R0		;  УСТ. ПРИЗН. ИНВЕРСИИ
	TSTB	PRINWS
	BEQ	1$
	COM	R0
1$:	TST	FON
	BEQ	2$
	COM	R0

2$:	MOVB	(R1)+,(R3)	;  ФОРМИРОВАНИЕ СИМВОЛА
	TST	R0
	BEQ	3$
	COMB	(R3)
