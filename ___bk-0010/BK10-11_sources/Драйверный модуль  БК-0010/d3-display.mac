	BEQ	4$
	COMB	(R3)

4$:	TSTB	PRPODC		;  ПОДЧЕРКИВАНИЕ
	BEQ	KFSIM
	MOVB	MASCW,(R3)
	BR	KFSIM

;	ФОРМИРОВАНИЕ ЦВЕТНОГО СИМВОЛА
;	-----------------------------

PFCWS:	CLR	-(SP)

6$:	MOVB	(R1)+,R5	;  ПОДГ. ИСХ. ДАНН. СТРОКИ
	BIC	#177400,R5
	MOV	#20,R4
	CLR	R0

	TSTB	PRINWS		;  ИНВЕРСИЯ
	BEQ	1$
	COMB	R5

1$:	TSTB	R5		;  РАСШИРЕНИЕ СТРОКИ
	BEQ	2$
5$:	ASR	R5
	BCC	3$
	BEQ	4$
	BIS	MASPOZ(R4),R0
3$:	SUB	#2,R4
	BNE	5$
4$:	BIS	MASPOZ(R4),R0

2$:	MOV	FON,R5		;  ФОРМИРОВАНИЕ ЦВЕТА
	BIC	R0,R5
	MOV	MASCW,R4
	COM	R0
	BIC	R0,R4
	BIS	R5,R4

	MOV	R4,(R3)		;  ЗАПИСЬ СТРОКИ СИМВОЛА

	JSR	PC,PFTAN	;  КОНЕЦ ЦИКЛА
	SOB	R2,6$

	TST	(SP)		;  ВЫХОД
	BNE	7$
	INC	(SP)
	INC	R2

	TSTB	PRPODC		;  ПОДЧЕРКИВАНИЕ
	BEQ	6$
	MOV	MASCW,(R3)

7$:	MOV	(SP)+,R0

KFSIM:	RTS	PC


